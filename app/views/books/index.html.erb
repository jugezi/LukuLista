<div class="container">

  <h1>Lukulista</h1>

  <ol class="breadcrumb">
    <li class="active">
      Kirjat
    </li>
  </ol>

  <div class='row'>
    <div class='col-sm-12'>
      <p>
        <form>
          <legend>Etsi</legend>
          <div class='col-xs-4'>
            <input type='text' class='form-control' value='<%= params[:keyword]%>' name='keyword' placeholder='Keyword' >
          </div>
        </form>
      </p>
    </div>
  </div>

  <hr>





  <div class="row">
    <div class="col-sm-8">
      <ul class="list-unstyled book-list">
          
      <%= render @books %>
      
      </ul>
    </div>
    <div class="col-sm-4">
      <h2>Genret</h2>
      <ul class="list-unstyled">
      <% @genres.each do |genre| %>
        <li>
          <%= link_to genre.name, books_path(filter: genre.name), class: 'label label-primary' %>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
